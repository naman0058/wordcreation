<!--body content start-->

<div class="page-content">

<!--blog start-->

<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12">
        <div class="left-side">
          <div class="post">
            <div class="post-image">
              <img class="img-fluid" src="/images/<%=result[0][0].image%>" alt="">
            </div>
            <div class="post-desc">
              <!-- <div class="post-date mb-2">23 <span>November 2018</span>
              </div> -->
              <div class="post-title">
                <h2><%=result[0][0].name%></h2>
              </div>
              <p class="lead"><%=result[0][0].description%></p>
              <input type="hidden" id="blog_features" value="<%=result[0][0].blog_features%>">
              <div id="blog_content"></div>
             </div>
          </div>
      
          <div class="mt-7">

            <% if(result[2].length > 0){%>

            <h3 class="title mb-4">All <span>Comments</span></h3>
          
          
            <% } %>

          <% for(i=0;i<result[2].length;i++){ %>
            <div>
              <div class="row mt-4">
                <div class="mb-4 mb-md-0 col-md-auto">
                  <img class="img-fluid" alt="image" src="https://static.vecteezy.com/system/resources/thumbnails/002/318/271/small_2x/user-profile-icon-free-vector.jpg" style="width: 50px;">
                </div>
                <div class="col-md">
                  <h6><%=result[2][i].name%></h6> 
                  <p><%=result[2][i].message%></p>
                  <div class="comment-date"> <span class="date"><%- new Date(result[2][i].created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>

                  </span>
                  </div>
                
                </div>
              </div>
            </div>


            <% } %>
          
         
          </div>
          <div class="post-comments mt-5 position-relative light-bg p-md-5 p-4">
            <div class="section-title mb-3">
              <h3 class="title">Leave A <span>Comment</span></h3>
            </div>
            <form method="post" action="/comment/<%=result[0][0].seo_name%>">
              <div class="messages"></div>
              <div class="row g-4">
                <div class="col-md-6">
                  <div>
                    <input id="form_name" type="text" name="name" class="form-control" placeholder="Name" required>
                    <div class="invalid-feedback">Name is required.</div>
                    <input type="hidden" name="blogid" value="<%=result[0][0].id%>">
                  </div>
                </div>
                <div class="col-md-6">
                  <div>
                    <input id="form_email" type="email" name="email" class="form-control" placeholder="Email" required>
                    <div class="invalid-feedback">Valid email is required.</div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div>
                    <textarea id="form_message" name="message" class="form-control h-100" placeholder="Your Comment" rows="3" required></textarea>
                    <div class="invalid-feedback">Please,leave us a message.</div>
                  </div>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-md-12">
                  <button class="btn btn-theme"><span>Post Comment</span>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-12 sidebar mt-5 mt-lg-0">
       
    
      
       
        <div class="widget recent-post">
          <h5 class="widget-title">Recent Post</h5>
         
         <% for(i=0;i<result[1].length;i++){ %>
          <article>
            <div class="row mt-4">
              <div class="col-sm">
                <img src="/images/<%=result[1][i].image%>" class="img-fluid" alt="...">
              </div>
              <div class="col-sm-9 mt-3 mt-sm-0"> <a href="/blogs/<%=result[1][i].seo_name%>"><%=result[1][i].name%></a>
                
              </div>
            </div>
          </article>
         
          <%  } %>
      
        </div>
      </div>
    </div>
  </div>
</section>

<!--blog end-->

</div>

<!--body content end--> 

