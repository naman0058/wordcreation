<section>
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-6 col-md-10">
        <div class="login-form box-shadow white-bg p-4 p-md-5">
          <h2 class="title mb-5">Sign Up</h2>
          <p style="color: <%= color %>;font-weight:bold"><%= msg %></p>
          <form method="post" action="/user/signup" onsubmit="validateForm()">
            <div class="messages"></div>
            <div class="form-group">
              <input id="form_name" type="text" name="name" class="form-control" placeholder="Enter Name" required="required" data-error="Username is required.">
              <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <input id="form_name" type="email" name="email" class="form-control" placeholder="Enter Email" required="required" data-error="Username is required.">
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input id="form_name" type="number" name="number" id="number" class="form-control" placeholder="Enter Number" required="required" data-error="Username is required.">
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input id="form_name" type="text" name="university_name" class="form-control" placeholder="Enter University Name" required="required" data-error="Username is required.">
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <input id="form_name" type="text" name="course_name" class="form-control" placeholder="Enter Course Name" required="required" data-error="Username is required.">
                <div class="help-block with-errors"></div>
              </div>
            <div class="form-group">
              <input id="form_password" type="password" name="password" class="form-control" placeholder="Password" required="required" data-error="password is required.">
              <div class="help-block with-errors"></div>
            </div>
            <div class="form-group mt-4 mb-5">
             
            </div> <button type="submit"  class="btn btn-theme btn-lg"><span>Sign Up</span></button>
          </form>
     <p style="margin-top: 10px;">Already account ? <a href="/user/login">Login Here</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

