 margin-bottom: 10px;
 padding: 8px;
}
</style>

    <!--**********************************
            Content body start
        ***********************************-->
    <div class="content-body">
        <!-- row -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive active-projects style-1">
                                <div class="tbl-caption">
                                    <h4 class="heading mb-0">My Assignment</h4>
                                    <div>


                                        <input type="text" class="form-control" id="searchInput" placeholder="Search">
                                    </div>
                                </div>
                                <table id="empoloyees-tblwrapper" class="table">
                                    <thead>
                                        <tr>
                                            <th>S. No.</th>
                                            <th>Order ID</th>
                                            <th>Assignment Type</th>
                                            <th>Task Type</th>
                                            <th>Module Code</th>
                                            <th>Module Name</th>
                                            <th>Status</th>
                                            <th>Due Date</th>
                                            <th>Amount</th>
                                            <th>Created At</th>
                                            <th>Assignment</th>
                                            <th>Documents</th>
                                            <th>Task Done</th>
                                            <th>Comments</th>
                                            <th>View Details</th>









                                            
                                    


                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% for(i=0;i<result.length;i++){ %>

                                            <tr>
                                                <td>
                                                    <%=i+1%></td>


                                                    <td>
                                                        <%=result[i].orderid%></td>


                                                    <td>
                                                        <%=result[i].assignment_type%></td>


                                                        <td>
                                                            <%=result[i].task_type%></td>


                                                            <td>
                                                                <%=result[i].module_code%></td>


                                                                <td>
                                                                    <%=result[i].module_name%></td>


                                                                    <td>
                                                                        <%=result[i].status.toUpperCase()%></td>

                                                                    <td>
                                                                        <%=result[i].due_date%></td>


                                                                        <% if(result[i].amount){%>
                                                                        <td>
                                                                            <%=result[i].amount%></td>
<% } else { %>
   <td>-</td>

<% } %>





                                                                            <td>
                                                                                <%=result[i].created_at%></td>



                                                                        <td>
                                                                            <a href="/images/<%=result[i].assignment%>"
                                                                                target="_blank"><span
                                                                                    class="badge badge-success light border-0">View Assignment</span></a>
                                                                        </td>



                                                                        <td>
                                                                            <a href="/images/<%=result[i].supporting_documents%>"
                                                                                target="_blank"><span
                                                                                    class="badge badge-success light border-0">View Documents</span></a>
                                                                        </td>


                                                                        <% if(result[i].done_assignment){ %>



                                                                            <td>
                                                                                <a href="/images/<%=result[i].done_assignment%>"
                                                                                    target="_blank"><span
                                                                                        class="badge badge-success light border-0">View Task</span></a>
                                                                            </td>
    
    
                                                                            <% } else { %>
    <td>-</td>
                                                                                <% } %>
    


                                                                        <td>
                                                                            <%=result[i].comments%></td>


                                                                            <td>
                                                                                <a href="/user/dashboard/view/orders/details?orderid=<%=result[i].orderid%>&status=<%=result[i].status%>"
                                                                                    ><span
                                                                                        class="badge badge-primary light border-0">View
                                                                                        Details</span></a>
                                                                            </td>

                                                
                                            
                                               



                                               



                                            </tr>


                                            <% } %>


                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!--**********************************
            Content body end
        ***********************************-->



        <%- include ('./footer.ejs') %>



    <script>
document.getElementById("searchInput").addEventListener("keyup", function() {
 const searchText = this.value.toLowerCase();
 const table = document.getElementById("empoloyees-tblwrapper");
 const rows = table.getElementsByTagName("tr");
 // Start iterating from the second row (skipping the table header)
 for (let i = 1; i < rows.length; i++) {
   const row = rows[i];
   const cells = row.getElementsByTagName("td");
   let found = false;
   for (let cell of cells) {
     const text = cell.textContent.toLowerCase();
     if (text.includes(searchText)) {
       found = true;
       break;
     }
   }
   if (found) {
     row.style.display = "";
   } else {
     row.style.display = "none";
   }
 }
});
    </script>